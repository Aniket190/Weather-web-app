<!DOCTYPE html>
<html lang="en" >

<head>
    <meta charset="UTF-8">
    <title>Weather.IO</title>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.7.5/angular.min.js"></script>
    <style>
        @import url('https://fonts.googleapis.com/css?family=Roboto|Krub|ABeeZee');
        @import url('https://fonts.googleapis.com/css?family=Andada|Permanent+Marker|Raleway:300');

        * {
            box-sizing: border-box;
        }
        input:-webkit-autofill,
        input:-webkit-autofill:hover,
        input:-webkit-autofill:focus,
        input:-webkit-autofill:active {
            transition: background-color 5000s ease-in-out 0s;
            -webkit-text-fill-color: #fff !important;
        }

        html {
            margin : 0;
            height : 100%;
        }


        body {
            background-attachment: fixed;
            margin: 0;
            height : 100%;
            background: #000046;  /* fallback for old browsers */
            background: -webkit-linear-gradient(#1CB5E0, #000046);  /* Chrome 10-25, Safari 5.1-6 */
            background: linear-gradient( #1CB5E0, #000046); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
            position: relative;
            font-family: 'Roboto', sans-serif;
            color: #fff;
        }

        #namer {
            position: relative;
            max-width: 400px;
            margin: 149px auto 0;
        }

        #namer input {
            border: 0;
            border-bottom: 2px solid #1976D2;
            width: 100%;
            font-size: 30px;
            line-height: 35px;
            height: 70px;
            text-align: center;
            padding: 10px;
            background: transparent;
            color: #fff;
            font-family: 'ABeeZee',sans-serif;
        }


        #namer input:focus {
            outline: 0;
            color: #fff;
        }

        #namer input::-webkit-input-placeholder {
            color: #fff;
        }

        #namer input:-ms-input-placeholder {
            color: #fff;
        }

        #namer input::-ms-input-placeholder {
            color: #fff;
        }

        #namer input::placeholder {
            color: #fff;
        }

        .namer-controls {
            position: relative;
            display: block;
            height: 30px;
            margin: 20px 0;
            text-align: center;
            opacity: 1;
            cursor: pointer;
        }


        .namer-controls div {
            float: left;
            width: 50%;

        }

        .namer-controls div span {
            box-shadow: 0px 0px 30px 0px rgba(0, 0, 0, 0.25);
            padding: 10px 5px;
            width: 95%;
            display: inline-block;
            margin-right: 5%;
            border-radius: 30px;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 0.3px;
            margin-left: 100px;
            margin-top: 20px;
        }

        .namer-controls div span.active {
            box-shadow: none;
            background-color: #1976D2;
        color: #fff;

        }


        .namer-controls div span:last-child {
            margin-right: 0;
        }



        #box {
            width:50%;
            height:50%;
            margin:0 auto;
            border-radius: 100px;
        }

        #Header {
            margin-top: 50px;
            text-align: center;
            font-size: 30px;
            color: rgba(250,250,250,0.8);
            font-family: 'Krub', sans-serif;
            cursor: pointer;

        }

        button {

            background-color: transparent;
            outline: none;
            border: 0px;
            color: #fff;
            font-size: 20px;
            cursor: pointer;
            width: 100%;
            height:100%;
        }

    </style>

    <script>

        $(document).ready(function(){
            $("#one").click(function(){
                $("#main").hide();
                $("#table").show();
            });

            $('#Header').click(function(){
                $("#main").show();
                $("#table").hide();
            })

        });

    </script>

    <script type="text/javascript">

        var app=angular.module("app",[]);
        app.controller("emp",['$scope',function($scope){
            $scope.iconi="{{icon}}";
            $scope.a='change';
        }]);




    </script>
</head>

<body>

<div ng-app="app">
    <div ng-controller="emp">

        <div id="Header"><h1><b>Weather.IO</b></h1></div>
        <div id="box">


            <div id="namer">
                <div ng-if="a=='change'" id="main">
                    <form action='/res'>
                        <div id="namer-input">
                            <input type="text" name="location" placeholder="Location">
                        </div>

                        <div class="namer-controls">
                            <div>
                                <span><button type="submit" id="one">Search</button></span>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>


<p id="demo" ></p>
