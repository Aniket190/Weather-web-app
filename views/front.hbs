    <script type="text/javascript">
        var app=angular.module("app",[]);
        app.controller("emp",['$scope',function($scope){
            $scope.iconi="{{icon}}";
            $scope.a='change';
        }]);
        function secondClick() {
            setTimeout(function(){
                document.getElementById("secondClick").click(); }, 0);

        }
        function getLocation() {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(showPosition);
            } else {
                x.innerHTML = "Geolocation is not supported by this browser.";
            }
        }
        function showPosition(position) {
            x = position.coords.latitude;
            y = position.coords.longitude;
            var a = document.getElementById("input_lat");
            a.value = x;
            var b = document.getElementById("input_lng");
            b.value = y;
            secondClick();
        }



        $(document).ready(function(){
            $("body").fadeIn("slow");
            $("#one").fadeIn("slow");
            $("#two").fadeIn("slow");
            $("#start").fadeIn("slow");
            $("#last").fadeIn("slow");
            $("#logo").fadeIn("slow");

            $("#one").click(function(){

                $("#one").animate({
                    opacity: 0,
                    marginLeft: '200px'
                },'slow','linear',function() {
                    $(this).hide();
                });

                $("#two").hide();

                $("#this").delay("slow").fadeIn();
                $("#namer-input").delay("slow").fadeIn();
                $("#back").delay("slow").fadeIn();
            });

            $("#back").click(function(){
                $("#back").fadeOut();
                $("#this").fadeOut();
                $("#namer-input").fadeOut();

                // $("#start").animate({
                //         opacity:0,
                //         marginLeft: '33.20vw',
                //         marginRight: '36.40vw'
                //     },'slow','linear'
                // );
                $("#one").addClass("mar");
                $("#one").animate({
                    opacity: 1,
                    marginLeft: '0px'
                },'slow','linear',function() {
                    $(this).fadeIn();
                });
                $("#two").delay("slow").fadeIn();
                $("#two").addClass("mar");


            })

        });
    </script>
